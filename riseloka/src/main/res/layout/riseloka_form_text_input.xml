<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_form_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@android:color/black"
            android:text="Form name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/riseloka_form_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_button_left"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/riseloka_form_default_button_icon" />

            <EditText
                android:id="@+id/et_form_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:hint="Hint"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_form_input"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:hint="Hint"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_button_right"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:src="@drawable/riseloka_form_default_button_icon" />

        </LinearLayout>

    </LinearLayout>
</merge>